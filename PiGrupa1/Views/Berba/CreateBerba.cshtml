@{
    ViewBag.Title = "Berba";
}
<div class="row flex-center">
    <div class="col-12 col-lg-6 row flex-center flex-column">
        <h3 class="text-center">Sustav za poljoprivredna gospodarstva</h3>
        <form class="pi-form my-4 col-12 col-lg-6">
            <div class="form-group row my-3">
                <input type="text" class="form-control col-12" placeholder="Unesite datum berbe"/>
            </div>
            <div class="form-group row my-3">
                <input type="text" class="form-control col-12" placeholder="Unesite količinu"/>
            </div>
            <div class="form-group row my-3">
                <select class="form-control col-12">
                    <option hidden> Odaberite id sadnje</option>
                </select>
            </div>
            <div class="form-group row my-3">
                <select class="form-control col-12">
                    <option hidden> Odaberite sezonu berbe</option>
                </select>
            </div>
            <button type="submit" class="my-3">Spremi farmu</button>
        </form>
    </div>
</div>