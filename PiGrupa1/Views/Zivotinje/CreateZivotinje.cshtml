@{
    ViewBag.Title = "Zivotinja";
}
<div class="row flex-center">
    <div class="col-12 col-lg-6 row flex-center flex-column">
        <img src="../../logo2.png" alt="Sustav za poljoprivredna gospodarstva">
        <form class="pi-form my-4 col-10 col-lg-6">
        <div class="form-group row my-3">
            <input type="text" class="form-control col-12" placeholder="Unesite vrstu životinje"/>
        </div>
        <div class="form-group row my-3">
            <input type="text" class="form-control col-12" placeholder="Unesite oznaku životinje"/>
        </div>
        <div class="form-group row my-3">
            <input type="text" class="form-control col-12" placeholder="Unesite količinu"/>
        </div>
        <div class="form-group row my-3">
            <input type="text" class="form-control col-12" placeholder="Unesite uzrok smrti"/>
        </div>
        <div class="form-group row my-3">
            <select class="form-control col-12">
                <option hidden >Odaberite id frame</option>
            </select>
        </div>
        <div class="form-group row my-3">
            <select class="form-control col-12">
                <option hidden >Odaberite status</option>
            </select>
        </div>
            <button type="submit" class="my-3">Spremi Životinju</button>
        </form>
    </div>
</div>
