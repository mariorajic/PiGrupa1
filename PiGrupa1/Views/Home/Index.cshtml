@{
  ViewBag.Title = "Home Page";
}

<div class="row flex-center">
  <div class="col-12 col-lg-6 row flex-center flex-column">
    <h3 class="text-center">Sustav za poljoprivredna gospodarstva</h3>
    <form class="pi-form my-4 col-10 col-lg-6">
      <div class="form-group row my-3">
        <label class="col-2 flex-center"><i class="fa fa-user"></i></label>
        <input type="email" class="form-control col-10" placeholder="Unesi email"/>
      </div>
      <div class="form-group row my-3">
        <label class="col-2 flex-center"><i class="fa fa-lock"></i></label>
        <input type="password" class="form-control col-10" placeholder="Unesi lozinku"/>
      </div>
      <button type="submit" class="my-3">Prijava</button>
      <div class="form-links d-flex justify-content-between my-3">
        <a href="#">Zaboravili ste lozinku?</a>
        <a href="@Url.Action("Register", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">
          <span>Registracija</span>
        </a>
      </div>
    </form>
  </div>
</div>